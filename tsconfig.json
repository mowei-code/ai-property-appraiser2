{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "index.tsx",
    "supabaseClient.ts",
    "types.ts",
    "utils.ts",
    "constants.ts",
    "components/**/*",
    "services/**/*",
    "contexts/**/*",
    "api/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist_electron",
    "server.js",
    "api"
  ]
}